<h2>Details about <em><%= @task.title %></em></h2>

<ul id="details">
  <li>
    Rating:
    <%= @task.rating %>
  </li>
  <li>
    Released on:
    <%= @task.release_date.strftime("%B %d, %Y") %>
  </li>
</ul>

<h3>Description:</h3>
<p id="description">
  <%= @task.description %>
</p>

<div class="row">
  <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary col-2' %>
  <%= link_to 'Delete', task_path(@task), 'data-method': 'delete', 'data-confirm': 'Are you sure?', class: 'btn btn-danger col-2' %>
  <%= link_to 'Back to task list', tasks_path, class: 'btn btn-primary col-2' %>
</div>
