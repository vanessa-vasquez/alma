<h2>Create New Task</h2>

<%= form_tag tasks_path, class: 'form' do %>
  <%= label :task, :title, 'Title', class: 'col-form-label' %>
  <%= text_field :task, :title, class: 'form-control' %>
  <%= label :task, :rating, 'Rating', class: 'col-form-label' %>
  <%= select :task, :rating, ['G','PG','PG-13','R'], {}, {class: 'form-control col-1'} %>
  <%= label :task, :release_date, 'Released On', class: 'col-form-label' %>
  <%= date_select :task, :release_date, {}, class: 'form-control col-2 d-inline' %>
  <br/>
  <%= submit_tag 'Save Changes', class: 'btn btn-primary' %>
  <%= link_to 'Cancel', tasks_path, class: 'btn btn-secondary' %>
<% end %>
